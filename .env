# Content Sharing Platform - Environment Variables
# Modify the values as needed

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_USER=content_user
POSTGRES_PASSWORD=content_pass
POSTGRES_DB=content_sharing_db
POSTGRES_PORT=5432

# Database Connection String (for application use)
DATABASE_URL=postgresql://content_user:content_pass@localhost:5432/content_sharing_db

# ============================================
# API CONFIGURATION
# ============================================
API_PORT=5000
FLASK_ENV=development
DEBUG=True

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET_KEY=very-secure-random-key
